{
  "name": "gcp-functions",
  "version": "0.1.0",
  "description": "Hasura typescript boilerplate",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run clean && npm run lint && tsc",
    "test": "NODE_ENV=test jest --bail --runInBand",
    "clean": "rm -rf lib && rm -rf .nyc_output && rm -rf coverage",
    "start": "node lib/index.js",
    "dev": "npm run build && npm start",
    "lint": "eslint --ext .js,.ts src",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:staging": "serverless deploy --stage staging",
    "deploy:prod": "serverless deploy --stage prod"
  },
  "author": "Toan Nguyen",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.2",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/supertest": "^2.0.9",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.21.2",
    "express": "^4.17.1",
    "jest": "^26.0.1",
    "serverless-google-cloudfunctions": "*",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "axios": "^0.19.2",
    "firebase-admin": "^8.12.1",
    "hasura-node-types": "^0.1.0",
    "winston": "^3.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hgiasac/hasura-typescript-boilerplate.git"
  },
  "keywords": [
    "hasura",
    "typescript",
    "boilerplate"
  ],
  "bugs": {
    "url": "https://github.com/hgiasac/hasura-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/hgiasac/hasura-typescript-boilerplate#readme",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "bail": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "common.ts"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run lint && ts-node src/server/index.ts",
    "watch": [
      "src/**/*.ts"
    ],
    "ignore": [
      "docs/*",
      ".git"
    ],
    "ext": "ts,json",
    "delay": "1000"
  }
}
