{
  "name": "events",
  "version": "1.0.0",
  "description": "remote schema and event trigger service",
  "main": "lib/index.js",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.3.5",
    "axios": "^0.19.0",
    "bcrypt": "^4.0.1",
    "jsonwebtoken": "^8.5.1",
    "@types/body-parser": "^1.19.0",
    "apollo-server-express": "^2.11.0",
    "body-parser": "^1.19.0"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/supertest": "^2.0.8",
    "jest": "^25.2.7",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.1",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "test": "NODE_ENV=test jest --bail --runInBand",
    "clean": "rm -rf lib && rm -rf .nyc_output && rm -rf coverage",
    "start": "node lib/index.js",
    "dev": "npm run build && npm start",
    "tslint": "tslint 'src/**/*.ts?(x)'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hgiasac/hasura-typescript-boilerplate.git"
  },
  "keywords": [
    "hasura",
    "typescript",
    "boilerplate"
  ],
  "author": "Toan Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hgiasac/hasura-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/hgiasac/hasura-typescript-boilerplate#readme",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "bail": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "common.ts"
    ]
  },
  "nodemonConfig": {
    "exec": "ts-node src/index.ts",
    "watch": [
      "src/**/*.ts"
    ],
    "ignore": [
      "docs/*",
      ".git"
    ],
    "ext": "ts,json",
    "delay": "1000"
  }
}
